{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Ink Story",
            "type": "shell",
            "command": "inklecate",
            "args": [
                "-o",
                "Corridor2193.json",
                "Corridor2193.ink"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "ink",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(ERROR|WARNING): (.*)\\(([0-9]+)\\): (.*)$",
                    "file": 2,
                    "line": 3,
                    "severity": 1,
                    "message": 4
                }
            }
        },
        {
            "label": "Play Ink Story",
            "type": "shell",
            "command": "inklecate",
            "args": [
                "-p",
                "Corridor2193.ink"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Count Words in Ink Story",
            "type": "shell",
            "command": "inklecate",
            "args": [
                "-c",
                "Corridor2193.ink"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Validate Ink Syntax",
            "type": "shell",
            "command": "inklecate",
            "args": [
                "-v",
                "Corridor2193.ink"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "ink",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(ERROR|WARNING): (.*)\\(([0-9]+)\\): (.*)$",
                    "file": 2,
                    "line": 3,
                    "severity": 1,
                    "message": 4
                }
            }
        }
    ]
}
